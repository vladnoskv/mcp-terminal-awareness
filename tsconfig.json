{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2020"],
    "types": ["node", "mocha"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tests/**/*.ts", "tests/**/*.js", "tests/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
