{
  "name": "mcp-terminal-awareness",
  "version": "0.1.0",
  "description": "MCP server that runs terminal commands with awareness of completion, waiting, and stuck states.",
  "license": "MIT",
  "type": "module",
  "exports": "./dist/bin/cli.js",
  "bin": {
    "mcp-terminal-awareness": "dist/bin/cli.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*.ts"
  ],
  "scripts": {
    "build": "tsc -p .",
    "dev": "node --enable-source-maps dist/bin/cli.js",
    "start": "node dist/bin/cli.js",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "test": "mocha",
    "test:unit": "mocha 'tests/unit/**/*.test.ts'",
    "test:integration": "mocha 'tests/integration/**/*.test.ts'",
    "test:watch": "mocha --watch 'tests/**/*.test.ts'",
    "test:coverage": "c8 --check-coverage --reporter=text --reporter=lcov mocha",
    "test:ci": "npm run test:coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "inspector": "npx @modelcontextprotocol/inspector@0.16.4 node dist/bin/cli.js",
    "inspector:build": "npm run build && npm run inspector",
    "inspector:quick": "node inspector.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vladnoskv/mcp-terminal-awareness.git"
  },
  "keywords": [
    "mcp",
    "terminal",
    "ai",
    "automation",
    "json-rpc"
  ],
  "engines": {
    "node": ">=18.19.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.4",
    "@types/chai": "^5.2.2",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.17.1",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mocha": "^11.7.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  },
  "dependencies": {
    "i18ntk": "^1.9.0"
  }
}
